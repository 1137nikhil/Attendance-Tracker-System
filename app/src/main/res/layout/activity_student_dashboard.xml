<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".student_dashboard" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:text="Welcome To Student DashBoard"
        android:textColor="#76FF03"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mark_attendance"
        android:layout_width="193dp"
        android:layout_height="148dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dashboard_background"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toEndOf="@+id/view_atndnce1"
        app:layout_constraintTop_toTopOf="@+id/view_atndnce1"
        app:srcCompat="@drawable/mark2" />

    <ImageButton
        android:id="@+id/view_atndnce"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/dashboard_background"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/view_atndnce1"
        app:layout_constraintTop_toBottomOf="@+id/view_atndnce1"
        app:srcCompat="@drawable/c_p" />

    <ImageButton
        android:id="@+id/addsubject"
        android:layout_width="195dp"
        android:layout_height="152dp"
        android:background="@drawable/dashboard_background"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/mark_attendance"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mark_attendance"
        app:layout_constraintTop_toTopOf="@+id/view_atndnce"
        app:srcCompat="@drawable/add_and_remove" />

    <ImageButton
        android:id="@+id/manage_leave"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/dashboard_background"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/view_atndnce"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_atndnce"
        app:layout_constraintTop_toBottomOf="@+id/view_atndnce"
        app:srcCompat="@drawable/manage3" />

    <ImageButton
        android:id="@+id/modify"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:background="@drawable/dashboard_background"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/manage_leave"
        app:layout_constraintEnd_toEndOf="@+id/addsubject"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addsubject"
        app:layout_constraintTop_toTopOf="@+id/manage_leave"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/modify" />

    <ImageButton
        android:id="@+id/view_atndnce1"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/dashboard_background"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/view" /><![CDATA[

    //android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@dr"
        />

]]>
</androidx.constraintlayout.widget.ConstraintLayout>