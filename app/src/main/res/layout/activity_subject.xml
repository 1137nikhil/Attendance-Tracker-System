<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".Subject">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="236dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:text="Enroll Subject"
        android:textColor="#64D506"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_sub"
        android:layout_width="290dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/add_subject_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:text="Add Subject"
        app:layout_constraintEnd_toEndOf="@+id/spinner_sub"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_sub"
        app:layout_constraintTop_toBottomOf="@+id/spinner_sub" />

    <Button
        android:id="@+id/removesubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:text="Remove Subject"
        app:layout_constraintEnd_toEndOf="@+id/add_subject_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_subject_btn"
        app:layout_constraintTop_toBottomOf="@+id/add_subject_btn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="178dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/nitc_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>